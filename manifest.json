{
	"manifest_version": 2,

	"name": "Live Bomb!",
	"description": "This extension notifies you when GiantBomb is live and you can also check the site schedule.",
	"version":  "1.2.3",
	"permissions": [
		"http://www.giantbomb.com/",
		"background",
		"notifications"
		],

	"icons": {
		"16": "images/16.png",
		"48": "images/48.png",
		"128": "images/128.png"
	},

	"author": "Andr√© Milani",
	 "short_name": "Livebomb",

	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; img-src *; object-src 'self'",


	"background": {
    "scripts": ["jquery-2.1.0.min.js","jquery.storageapi.min.js","ion.sound.min.js","ga.js","functions.js","background.js"],
    "persistent": true
  },

	"browser_action": {
		"default_icon": "images/giantbomb.png",
		"default_popup": "popup.html",
		"default_title": "Live Bomb!"
		}
}
