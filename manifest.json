{
	"manifest_version": 2,

	"name": "Live Bomb!",
	"description": "This extension notifies you when GiantBomb is live and you can also check the site schedule.",
	"version":  "1.2.10",
	"permissions": [
		"background",
		"notifications"
	],

	"icons": {
		"16": "images/16.png",
		"48": "images/48.png",
		"128": "images/128.png"
	},

	"author": "Andr√© Milani",
	"short_name": "Livebomb",

	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; img-src *; object-src 'self'",

	"background": {
		"scripts": ["js/background.min.js"],
		"persistent": true
	},

	"browser_action": {
		"default_icon": {
			"19": "images/giantbomb.png",
			"38": "images/76.png"
		},
		"default_popup": "popup.html",
		"default_title": "Live Bomb!"
	}
}
